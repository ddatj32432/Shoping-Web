@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Listed";
}
<h3>List Categories</h3>
<a asp-action="Create" asp-controller="Category">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Category Slug</th>
            <th scope="col">Category Status</th>
           

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
               
                <td>@item.Slug</td>
                <td>
                    @if(@item.Status == 1)
                    {
                        <span class="text text-success">Valid</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hide</span>

                    }
                    </td>
               
                <td>
                    <a asp-action="Edit" class="btn-warning btn-sm" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn-danger btn-sm confirmDeletion" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }

    </tbody>
</table>